<% i = @shooting.photos.length - 1%>

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">

  <ol class="carousel-indicators">
    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
    <% i.times do %>
    <li data-target="#carouselExampleIndicators" data-slide-to='#{i}'></li>
    <% end %>
  </ol>

  <div class="carousel-inner">
    <div class="carousel-item active">
      <%= cl_image_tag @shooting.photos[0].key, class: "d-block", id: 'carou-image', alt: "First slide" %>
    </div>
    <% @shooting.photos[1..-1].each_with_index do |photo, index|%>
      <div class="carousel-item">
        <%= cl_image_tag photo.key, class: "d-block", id: 'carou-image', alt: "#{i}. slide" %>
      </div>
    <% end %>
  </div>

  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
    <i class="fas fa-chevron-left"></i>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
    <i class="fas fa-chevron-right"></i>
  </a>
</div>
